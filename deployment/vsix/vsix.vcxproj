<?xml version="1.0" encoding="utf-8"?>
<Project DefaultTargets="Build" ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<ItemGroup Label="ProjectConfigurations" Condition="'$(VisualStudioVersion)'=='10.0'">
		<ProjectConfiguration Include="Release|Win32">
			<Configuration>Release</Configuration>
			<Platform>Win32</Platform>
		</ProjectConfiguration>
		<ProjectConfiguration Include="Release|x64">
			<Configuration>Release</Configuration>
			<Platform>x64</Platform>
		</ProjectConfiguration>
	</ItemGroup>
  <PropertyGroup Label="UserMacros">
    <OutDirX86>$(SolutionDir)_bin\Release_x86\</OutDirX86>
    <OutDirX64>$(SolutionDir)_bin\Release_x64\</OutDirX64>
  </PropertyGroup>
	<PropertyGroup Label="Globals">
		<ProjectGuid>{569EEA47-BC7D-4447-A26B-50CFD48B1F81}</ProjectGuid>
	</PropertyGroup>
	<Import Project="$(SolutionDir)build.props\platform.props" />
	<PropertyGroup Label="Configuration">
		<ConfigurationType>Utility</ConfigurationType>
	</PropertyGroup>
	<Import Project="$(VCTargetsPath)\Microsoft.Cpp.props" />
	<ImportGroup Label="PropertySheets">
		<Import Project="$(SolutionDir)build.props\config.props" />
	</ImportGroup>
	<PropertyGroup>
		<OutDir>$(SetupDir)</OutDir>
		<ExtensionsToDeleteOnClean>*.cmd;*.txt;*.cdf;*.cache;*.obj;*.ilk;*.resources;*.tlb;*.tli;*.tlh;*.tmp;*.rsp;*.pgc;*.pgd;*.meta;*.tlog;*.manifest;*.res;*.pch;*.exp;*.idb;*.rep;*.xdc;*.pdb;*_manifest.rc;*.bsc;*.sbr;*.xml;*.metagen;*.bi</ExtensionsToDeleteOnClean>
		<TargetName>micro-profiler</TargetName>
		<TargetExt>.vsix</TargetExt>
	</PropertyGroup>
	<ItemGroup>
		<None Include="$(OutDirX86)micro-profiler_frontend.dll" />
		<None Include="$(OutDirX86)micro-profiler_Win32.dll" />
		<None Include="$(OutDirX86)micro-profiler_Win32.lib" />
		<None Include="$(OutDirX64)micro-profiler_x64.dll" />
		<None Include="$(OutDirX64)micro-profiler_x64.lib" />
		<None Include="*.json;*.xml" />
		<None Include="$(OutDirX86)*.cpp;$(OutDirX86)*.h;$(OutDirX86)*.pkgdef;$(OutDirX86)*.vsixmanifest;$(OutDirX86)logo.ico"/>
		<Pack Include="$(OutDirX86)micro-profiler_frontend.dll" />
		<Pack Include="$(OutDirX86)micro-profiler_Win32.dll" />
		<Pack Include="$(OutDirX86)micro-profiler_Win32.lib" />
		<Pack Include="$(OutDirX64)micro-profiler_x64.dll" />
		<Pack Include="$(OutDirX64)micro-profiler_x64.lib" />
		<PackReplace Include="*.json;*.xml"/>
		<Pack Include="&quot;$(OutDirX86)*.cpp&quot;;&quot;$(OutDirX86)*.h&quot;;&quot;$(OutDirX86)*.pkgdef&quot;;&quot;$(OutDirX86)*.vsixmanifest&quot;;&quot;$(OutDirX86)logo.ico&quot;"/>

		<CustomBuild Include="$(OutDirX86)1033\micro-profiler.ui.dll">
			<FileType>Document</FileType>
			<Command>cd "$(OutDirX86)"
mkzip 1033\micro-profiler.ui.dll "$(IntDir)$(TargetName).zip"</Command>
		</CustomBuild>		
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="$(SolutionDir)micro-profiler\micro-profiler.vcxproj">
			<Project>{d5d49128-2510-4a14-9a0f-9f8f0abad700}</Project>
		</ProjectReference>
		<ProjectReference Include="$(SolutionDir)collector\src\collector.vcxproj">
			<Project>{5edce420-14e9-46e6-b19e-e4ac3240fc94}</Project>
		</ProjectReference>
	</ItemGroup>
	<Target Name="Compress" AfterTargets="Midl">
		<Exec Command="mkzip &quot;%(Pack.Identity)&quot; &quot;$(IntDir)$(TargetName).zip&quot;"/>
	</Target>
	<Target Name="CompressAndReplace" AfterTargets="Compress">
		<Exec Command="call make-version VERSION &quot;$(SolutionDir)version.h&quot;
			call sha256 hashmpxfrontend &quot;$(OutDirX86)micro-profiler_frontend.dll&quot;
			call sha256 hashmpx86 &quot;$(OutDirX86)micro-profiler_Win32.dll&quot;
			call sha256 hashmpx86lib &quot;$(OutDirX86)micro-profiler_Win32.lib&quot;
			call sha256 hashmpx64 &quot;$(OutDirX64)micro-profiler_x64.dll&quot;
			call sha256 hashmpx64lib &quot;$(OutDirX64)micro-profiler_x64.lib&quot;
			call sha256 hashmpui &quot;$(OutDirX86)1033\micro-profiler.ui.dll&quot;

			call sha256 hashmanifest &quot;$(OutDirX86)extension.vsixmanifest&quot;
			call sha256 hashappicon &quot;$(OutDirX86)logo.ico&quot;
			call sha256 hashpkgdef &quot;$(OutDirX86)micro-profiler.pkgdef&quot;

			call replace &quot;%(PackReplace.Identity)&quot; &gt; &quot;$(IntDir)%(PackReplace.Filename)%(PackReplace.Extension)&quot;
			call mkzip &quot;$(IntDir)%(PackReplace.Filename)%(PackReplace.Extension)&quot; &quot;$(IntDir)$(TargetName).zip&quot;"/>
	</Target>
	<Target Name="RenameTarget" AfterTargets="CompressAndReplace">
		<Exec Command="call make-version VERSION &quot;$(SolutionDir)version.h&quot;
			set VERSIONED_PATH=&quot;$(OutDir)$(TargetName).v%VERSION%$(TargetExt)&quot;
			del %VERSIONED_PATH%
			copy &quot;$(IntDir)$(TargetName).zip&quot; %VERSIONED_PATH%"/>
	</Target>
	<Import Project="$(VCTargetsPath)\Microsoft.Cpp.targets" />
</Project>